<form
  id="search-form"
  class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-center"
  action="/blog/search"
  method="GET"
>
  <div class="relative w-full max-w-md"> <!-- Adjust width here -->
    <label for="search" class="sr-only">Search</label>
    <input
      id="search"
      name="query"
      type="text"
      required
      class="bg-gray-50 border border-gray-300 text-black text-sm rounded-lg block w-full p-2.5 placeholder:text-zinc-500"
      placeholder="Search for blog posts..."
    />
  </div>
  <button
    type="submit"
    class="p-2.5 ms-2 text-sm font-medium text-white bg-indigo-700 rounded-lg border border-indigo-700 hover:bg-indigo-800 focus:ring-4 focus:outline-none focus:ring-indigo-300"
  >
    <svg
      class="w-4 h-4"
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 20 20"
    >
      <path
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"
      />
    </svg>
    <span class="sr-only">Search</span>
  </button>
</form>
